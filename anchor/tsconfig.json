{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["mocha", "node"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "lib": ["es2020"],
    "target": "es2020",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020"
    }
  }
}
